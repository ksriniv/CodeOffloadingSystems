var splitterDragging=false;var splitterStartDeltaX=0;var splitterStartX=0;var splitterMin=50;var splitterLastX=0;function SplitterMouseDown(a){a=a||window.event;var c=GetMouseCoords(a);var b=document.getElementById("tree_splitter");splitterStartX=clipPx(b.style.left);splitterStartDeltaX=c.x-splitterStartX;splitterDragging=true;if(b.setCapture){b.setCapture()}a.preventDefault?a.preventDefault():a.returnValue=false;return false}function SplitterMouseMove(b){if(splitterDragging){b=b||window.event;var d=GetMouseCoords(b);var c=document.getElementById("tree_splitter");var a=d.x-splitterStartDeltaX;if(a<splitterMin){if(a<splitterMin/2){a=0}else{a=splitterMin}}else{if(a>document.body.scrollWidth-splitterMin){a=document.body.scrollWidth-splitterMin}}c.style.left=a+"px";c.style.zIndex=100;b.preventDefault?b.preventDefault():b.returnValue=false;return false}}function DockSplitterTo(a){var c=document.getElementById("tree_panel");var e=document.getElementById("main_panel");var d=document.getElementById("tree_splitter");var b=clipPx(d.style.width);c.style.width=a+"px";d.style.left=a+"px";e.style.left=a+b+"px";if(a>0){splitterLastX=a}SetCheckButton("show_bookmarks",a>0);PageResize()}function SplitterMouseUp(b){if(splitterDragging){splitterDragging=false;var c=document.getElementById("tree_splitter");var a=clipPx(c.style.left);if(c.releaseCapture){c.releaseCapture()}DockSplitterTo(a)}}function ToggleBookmarksPanelClick(){var b=document.getElementById("show_bookmarks");var c=document.getElementById("tree_splitter");var a=clipPx(c.style.width);if(b.checked){DockSplitterTo(splitterLastX)}else{DockSplitterTo(0)}}function SplitterDblClick(){var a=document.getElementById("show_bookmarks");SetCheckButton(a,!a.checked)};